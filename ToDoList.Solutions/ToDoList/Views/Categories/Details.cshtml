@{
  Layout = "_Layout";
}

@model ToDoList.Models.Category

<h2>Category Details</h2>

<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Category doesn't have any tasks yet!</p>
}
else
{
  <h4>Tasks for @Html.DisplayFor(model => model.Name)</h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Item.Description</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to all Categories", "Index")</p>
<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.CategoryId })</p>
<p>@Html.ActionLink("Delete this Category", "Delete", new { id = Model.CategoryId})</p>